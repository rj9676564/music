# ==========================================
# 数据库配置
# ==========================================

# 数据库类型: sqlite 或 mysql
DB_TYPE=sqlite

# SQLite 配置（当 DB_TYPE=sqlite 时使用）
DB_PATH=data/molten.db

# MySQL 配置（当 DB_TYPE=mysql 时使用）
# 格式: user:password@tcp(host:port)/database?charset=utf8mb4&parseTime=True&loc=Local
DB_DSN=molten:moltenpass@tcp(mysql:3306)/molten_music?charset=utf8mb4&parseTime=True&loc=Local

# ==========================================
# MySQL 容器配置（仅当 DB_TYPE=mysql 时需要）
# ==========================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=molten_music
MYSQL_USER=molten
MYSQL_PASSWORD=moltenpass
MYSQL_PORT=3306

# ==========================================
# 后端服务配置
# ==========================================
BACKEND_PORT=8080

# Whisper 服务器地址
WHISPER_SERVER_URL=http://d.mrlb.top:9999

# 时区
TZ=Asia/Shanghai
